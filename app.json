{
  "expo": {
    "name": "MetroTracker",
    "slug": "MetroTracker",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/metro.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.metro.tracker.app",
      "buildNumber": "1.0.1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow application to use your location.",
        "NSLocationAlwaysUsageDescription ": "Location is required for better shipment."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.metro.tracker"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
